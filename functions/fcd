fcd() {
      local dir;

      while true; do
        # exit with ^D
        dir="$(gls -a1p | grep '/$' | fzf --height 40% --reverse --no-multi --preview 'pwd' --preview-window=up,1,border-none --no-info)"
        if [[ -z "${dir}" ]]; then
          break
        else
          cd "${dir}"
        fi
      done
    }